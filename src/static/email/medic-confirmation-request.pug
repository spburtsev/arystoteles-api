extends base

block content
  p Hi,
  p A new medic account requested a confirmation: #{fullName}, #{email}.
  p Follow the link to confirm: #{url}.
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${url}`, target='_blank') Confirm
  p If you don't know this account, please ignore this email!